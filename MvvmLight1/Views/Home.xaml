<Page
    x:Class="MvvmLight1.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MvvmLight1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Border Width="1225" Height="690" BorderThickness="2" BorderBrush="Black">
            <StackPanel Height="690" VerticalAlignment="Top" Width="1225" Background="#EEEEEE" HorizontalAlignment="Stretch">
                <TextBlock Margin="50,50,0,0" Text="CityApp" TextWrapping="Wrap" FontFamily="Arial" FontWeight="Bold" FontSize="48"/>
                <ComboBox Header="Categorieën" PlaceholderText="Pick a color" Width="200">
                    <x:String>Frieten</x:String>
                    <x:String>Pizza</x:String>
                    <x:String>Pita</x:String>
                    <x:String>Chinees</x:String>
                    <x:String>Veggie</x:String>
                </ComboBox>
            </StackPanel>
        </Border>
    </Grid>
</Page>
